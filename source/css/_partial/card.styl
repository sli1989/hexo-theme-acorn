//
// Card
//
.card
  position: relative
  overflow: hidden
  transition: transition-base
  text-align: center
  .card-img
    display: block
	max-width: 100%
    transition(transition-base)
  .card-body,
  .card-header,
  .card-footer
    padding: spacer
	text-align: center
  .card-body
    .archive-article-title + time
      display: inline-block
      margin-bottom: spacer
  .card-text,
  .card-text > p
    min-height: font-line-height * font-size-base * 2
    margin-bottom: 0
  &:hover
    .card-img
      opacity: .8
